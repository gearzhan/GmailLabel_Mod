{
  "manifest_version": 3,
  "name": "Gmail Multi-Label Picker",
  "version": "0.2.0",
  "description": "Custom multi-select labels UI for Gmail; rename/sort/hide and search.",
  "permissions": [
    "identity",
    "storage"
  ],
  "host_permissions": [
    "https://mail.google.com/*",
    "https://www.googleapis.com/*"
  ],
  "background": {
    "service_worker": "sw.js"
  },
  "content_scripts": [
    {
      "matches": [
        "https://mail.google.com/*"
      ],
      "js": [
        "styles.js",
        "GmailAdapter.js",
        "PanelUI.js",
        "DragDropHandler.js",
        "content.js"
      ],
      "run_at": "document_idle"
    }
  ],
  "options_page": "options.html",
  "action": {
    "default_title": "Gmail Multi-Label Picker",
    "default_popup": "popup.html"
  }
}